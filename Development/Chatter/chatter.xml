  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_antlr:antlr:2.7.7.classpath">
    <pathelement location="${path.variable.maven_repository}/antlr/antlr/2.7.7/antlr-2.7.7.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.12.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
  </path>
  
  <path id="library.maven:_org.apiguardian:apiguardian-api:1.0.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.jupiter:junit-jupiter-api:5.3.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.3.1/junit-jupiter-api-5.3.1.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.jupiter:junit-jupiter-engine:5.3.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-engine/5.3.1/junit-jupiter-engine-5.3.1.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.platform:junit-platform-commons:1.3.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.3.1/junit-platform-commons-1.3.1.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.platform:junit-platform-engine:1.3.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-engine/1.3.1/junit-platform-engine-1.3.1.jar"/>
  </path>
  
  <path id="library.maven:_org.mockito:mockito-all:1.9.5.classpath">
    <pathelement location="${path.variable.maven_repository}/org/mockito/mockito-all/1.9.5/mockito-all-1.9.5.jar"/>
  </path>
  
  <path id="library.maven:_org.opentest4j:opentest4j:1.1.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.1.1/opentest4j-1.1.1.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_chatter.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.chatter" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.chatter" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.chatter:jar" value="${basedir}/classes/artifacts/Chatter_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Chatter.jar" value="${artifacts.temp.dir}/Chatter.jar"/>
  </target>
  
  <target name="artifact.chatter:jar" depends="init.artifacts, compile.module.chatter" description="Build &#39;Chatter:jar&#39; artifact">
    <property name="artifact.temp.output.chatter:jar" value="${artifacts.temp.dir}/Chatter_jar"/>
    <mkdir dir="${artifact.temp.output.chatter:jar}"/>
    <jar destfile="${temp.jar.path.Chatter.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${chatter.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.Chatter.jar}" tofile="${artifact.temp.output.chatter:jar}/Chatter.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.chatter:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.chatter:jar}"/>
    <copy todir="${artifact.output.chatter:jar}">
      <fileset dir="${artifact.temp.output.chatter:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>